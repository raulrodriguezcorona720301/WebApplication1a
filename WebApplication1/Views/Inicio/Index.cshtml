@using WebApplication1.Models
@using WebApplication1.Helpers
@model List<EntProductVm>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div style="width:100%;">MVC Super test</div>
    <div style="width:100%;">Cambio a C y en un nuevo intento</div>
    <div style="max-width:60%; height:auto; font-size: 1vw; padding:0px 5px 10px 2px; border-bottom:dashed thick;"> 
